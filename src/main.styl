@import "_nib"
@import "_mixins"
@import url("http://fonts.googleapis.com/css?family=Playfair+Display|Muli")
pages = 5
menuSize = 50px
mobileMenuWidth = 600px
gutter = 10px
unitWidth3 = 960px
unitWidth1 = (unitWidth3/3)
unitWidth2 = (unitWidth1*2)
unitWidthHalf = (unitWidth3/2)
unitHeight1 = (unitWidth1 * 0.6)
unitHeight2 = (unitWidth2 * 0.6)
unitHeight3 = (unitWidth3 * 0.6)
unitHeightHalf = (unitWidthHalf * 0.6)
emphasisColor = #000
linkColor = #6986F8
lightColor = #fcfcfc
darkColor = #222
textColor = #444
textTitleColor = #808080

global-reset()

background-cover(url="")
	background url("assets/bgs/"+url+".png") fixed repeat
	//background url("http://lorempixel.com/1000/800/"+url) fixed repeat
	//background-size cover

html, body 
	height 100%

body
	font-family 'Muli', "Century Gothic", sans-serif;
	background lightColor
	color textColor
	margin 0
	font-size 2.3em

h1, h2, h3, h4, h5
	font-family 'Playfair Display', serif
	text-transform 	uppercase
	color textTitleColor

h1
	font-size 65px
	line-height 1.2em
	padding 20px 0
	margin-bottom 40px

h3
	font-weight 300
	min-height 3.2em

p
	text-align justify
	word-break keep-all
	hyphens auto
	margin-bottom 1em
	line-height 1.5em
	a, a:link, a:visited, a:hover
		color linkColor
hr
	width 80%
	color textTitleColor

strong
	font-size 1.1em
	font-weight bold
	strong
		font-size 1.2em

em
	color emphasisColor

li
	text-indent .2em
	i
		font-size .7em
		margin-right .5em

small
	font-size .8em

.wrapper, [class^="size-"],[class*=" size-"], .page
	box-sizing border-box;

#Pages
	min-height 100%
	height (100% * pages)
	clearfix()

.info
	padding 20px
	position relative
	background lightColor
	box-shadow(0 0 gutter rgba(10,10,10,.1))
	&.important
		background transparent
		font-size 1.5em
		color lightColor
		box-shadow(none)
		padding 0
		p
			line-height 1em

.title
	color lightColor
	text-shadow 0 -1px 0 rgba(0,0,0,0.15),0 1px 0 rgba(255,255,255,0.8)
	.fa
		font-size .8em
		position relative
		top -0.1em
		margin-right .5em

.page
	float left
	width 100%
	margin 0 auto
	clearfix()
	position relative
	padding menuSize 0
	background-cover "dark/skewed_print"
	&:nth-child(even)
		background-cover "light/debut_light"
		.info
			background-transparency(lightColor,.3)
		.title
			color darkColor
			text-shadow:0 -1px 0 rgba(0,0,0,0.3),0 1px 0 rgba(255,255,255,0.4)
	&:nth-child(2)
		//background-cover "nature/1"
	&:nth-child(4)
		//background-cover "stressed_linen"
	&:nth-child(6)
		//background-cover "txture"
	&:last-child
		padding-bottom 100px

.wrapper, .wrapper-title, .wrapper-menu
	width unitWidth3
	margin 0 auto
	position relative
	clearfix()
	overflow hidden

.social-link
	background none
	&:link,&:visited
		color darkColor
	&:hover,&:active
		color lightColor
		background black

.anchor
	position absolute
	display block
	width 1px
	height 1px
	top 0

.image
	text-align center
	position relative
	img
		margin 0 auto

.overlay
	position absolute
	right 0
	bottom 0
	padding 1em
	margin 1em
	width 50%
	background black
	//background rgba(0,0,0,.5)
	color #fdfdfd

.size-1, .size-2, .size-3, .size-half
	width (unitWidth3 - (gutter * 2))
	min-height 181px
	margin gutter

.size-half
	width (unitWidthHalf - (gutter * 2))

.height-1
	height (unitHeight1 - (gutter * 2))

.height-2
	height (unitHeight2 - (gutter * 2))

.height-3
	height (unitHeight3 - (gutter * 2))

.height-half
	height (unitHeightHalf - (gutter * 2))


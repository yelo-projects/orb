img[class^="size-"],img[class*=" size-"]
	margin 0 auto

[class^="size-"],[class*=" size-"]
	float left

#Home
	height (100% / pages)
	text-align center

#Wrapper-Logo
	width 100%
	height 100%
	display block

.logo
	display block
	margin 0 auto
	width 100%
	height 100%
	background url("assets/logo-white.svg") no-repeat center center
	background-size auto 50%

.no-svg #Logo
	background url("assets/logo-white.png") no-repeat center center

.social-icons
	position absolute
	bottom 0
	right 0

.social-link
	font-size 2em
	span
		display none

.scrollDown
	color lightColor
	padding 10px
	position absolute
	bottom 1em
	font-size 2em

.menu-container
	position absolute
	position fixed
	top 0
	height menuSize

.menu-link
	text-align center
	vertical-align middle
	text-decoration none
	text-transform uppercase
	color lightColor
	@css{transition: all 300ms ease-in-out;}
	&:link, &:visited
		color lightColor
	&:hover, &.active
		background-color lightColor
		color textTitleColor

.menu-logo-wrapper
	height 300px

#Menu-Revealer, .menu-container
	position absolute
	position fixed
	display block
	width menuSize * 3
	height 100%
	right 0
	top 0
	text-align center

#Pages
	position relative

#Menu-Revealer
	font-size 2em	
	line-height 1.5em
	right 0
	color textTitleColor
	height menuSize * 3
	background #9c9c9c

.menu-container
	font-size 1.5em

.menu-container, .wrapper-menu, .menu, .menu-link
	display block

.wrapper-menu
	width mobileMenuWidth
	height 100%
	float right
	right - mobileMenuWidth
	position absolute
	background black

.menu-link
	display block
	width mobileMenuWidth
	text-align left
	padding .2em

#Home-Link
	display none

#Menu-Revealer:hover, .menu-open
	#Pages
		right mobileMenuWidth
	#Menu-Revealer
		right mobileMenuWidth
	.wrapper-menu
		right 0

@css{#Pages, #Menu-Revealer, .wrapper-menu{transition: all 300ms ease-in-out;}}


.fluid-wrapper
	position relative
	padding-bottom: 56.25%
	width 100%
	height 0
	background lightColor
	box-sizing border-box
	iframe
		position absolute
		top 0
		left 0
		right 0
		bottom 0
		width 100%
		height 100%
		border 1px solid black
		background lightColor

@media screen and (min-width:1200px)
	@import "_responsive"

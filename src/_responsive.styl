.menu-container
	width 100%
	height menuSize
	position absolute
	top 90%
	&.fixed
		position fixed
		top 0

.menu-logo-wrapper
	display none

.wrapper-menu
	display table
	height 100%
	width auto
	float none
	top auto
	right auto
	position relative
	background none

.menu
	display table-row
	width 100%
	height 100%

.menu-link, #Home-Link
	display table-cell
	width auto

#Menu
	display table
	&.open
		display table

#Menu-Revealer
	display none

.split
	padding 0
	.wrapper
		width 50%
		float right
	.wrapper-title
		width 50%
		float left
	.title
		float right
		text-align right
	.info, .title
		box-sizing border-box

@import "_nib"
@import url("http://fonts.googleapis.com/css?family=Muli")
@import url("http://fonts.googleapis.com/css?family=Playfair+Display|Fjalla+One|Oswald")
pages = 5
menuSize = 50px

global-reset()

background-cover(url="")
	background url("http://lorempixel.com/1000/800/"+url) fixed repeat
	background-size cover

html, body 
	height 100%

body
	font-family 'Muli', "Century Gothic", sans-serif;
	background #f4f4f7
	color #444
	margin 0
	font-size 1.6em

h1, h2, h3, h4, h5
	font-family 'Playfair Display', serif

h1
	font-size 65px
	line-height 1.2em
	border-bottom #CCC solid 1px
	padding 20px 0
	margin-bottom 40px

h3
	font-weight 300
	min-height 3.2em

p
	text-align justify
	word-break keep-all
	hyphens auto

li
	text-indent .2em
	i
		font-size .7em
		margin-right .5em

.wrapper, [class^="size-"],[class*=" size-"], .page
	box-sizing border-box;

#Pages
	min-height 100%
	height (100% * pages)
	clearfix()

.page
	float left
	width 100%
	margin 0 auto
	clearfix()
	position relative
	padding menuSize 0
	background #0c0c0c
	.title
		color #fff
	&:nth-child(even)
		.title
			color #000
	&:nth-child(2)
		background-cover "nature/1"
	&:nth-child(4)
		background-cover "nature/2"
	&:nth-child(6)
		background-cover "nature/3"
	&:last-child
		padding-bottom 100px

.wrapper, .wrapper-title, .wrapper-menu
	width 960px
	margin 0 auto
	position relative
	clearfix()
	overflow hidden

.menu-container
	position absolute
	position fixed
	top 0
	width 100%
	background grey
	height menuSize

.wrapper-menu
	display table
	height 100%

.menu
	display table-row
	width 100%
	height 100%

.social-link
	&:link,&:visited
		color #000
	&:hover,&:active
		color #990000

.menu-link
	display table-cell
	text-align center
	vertical-align middle
	text-decoration none
	color #fcfcfc
	@css{transition: all 300ms ease-in-out;}
	&:link, &:visited
		color #fcfcfc
	&:hover, &.active
		background-color #fcfcfc
		color #909090

.anchor
	position absolute
	display block
	width 1px
	height 1px
	top 0

.info
	padding 20px
	position relative

.size-1, .size-2, .size-3, .size-half
	width 950px
	min-height 181px
	margin 5px

.size-half
	width 470px

#Wrapper-Medium > div
	float right

.height-1
	height 181px

.height-2
	height 373px

.height-3
	height 565px

.height-half
	height 277px


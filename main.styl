.image-person, .image-person img
	width 310px
	height 310px
	max-width 100%
	position relative

.image-person
	border-radius 160px
	overflow hidden
	color #fff
	margin-bottom 20px
	&:after
		content ""
		border-radius 160px
		position absolute
		top 0
		left 0
		right 0
		bottom 0
		box-shadow inset 0 0 8px rgba(0, 0, 0, .7)
	.image-person-caption
		position absolute
		bottom 50px
		height 30px
		width 100%
		left 0
		background-color #000
		background-color rgba(0,0,0,.4)
		text-align center
		&.image-person-caption-name
			bottom -10px
			padding 10px 0 20px 0
			background-color rgba(0,0,0,.6)
		&.image-person-caption-title
			font-size .8em
			line-height 1.4em


img[class^="size-"],img[class*=" size-"]
	margin 0 auto

[class^="size-"],[class*=" size-"]
	float left
	background #fcfcfc

#Page-Title, #Page-Contact
	height ((100% / pages) - 5%)

#Page-Title
	text-align center

#Wrapper-Logo
	width 100%
	height 100%
	display block

#Logo
	display block
	margin 0 auto
	width 100%
	height 100%
	background url("/assets/logo-white.png") no-repeat center center
	background-size auto 50%